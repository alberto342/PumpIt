<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="fitness.albert.com.pumpit">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.albert.fitness.pumpit.workout.ShowExerciseImgActivity"></activity>
        <activity
            android:name="com.albert.fitness.pumpit.fragment.profile.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name="com.albert.fitness.pumpit.welcome.RegisterActivity"/>
        <activity android:name="com.albert.fitness.pumpit.workout.FinisherWorkoutActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.ShowLogExerciseActivity" />
        <activity android:name="com.albert.fitness.pumpit.fragment.logsFragment.LogTabActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.CustomAddExerciseActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.ChangePlanActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.WorkoutStartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.albert.fitness.pumpit.workout.StartWorkoutActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.FindWorkoutActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.EditCustomPlanActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.ExerciseLogsActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.TrainingActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.WorkoutActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.WorkoutPlansActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.CustomPlanActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.ShowExerciseResultActivity" />
        <activity android:name="com.albert.fitness.pumpit.workout.ExerciseDetailActivity" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.ShowSnackActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.ShowLunchActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.ShowDinnerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.ShowBreakfastActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.albert.fitness.pumpit.nutrition.ShowAllNutritionActivity" />
        <activity android:name="com.albert.fitness.pumpit.nutrition.ShowItemFoodActivity" />
        <activity
            android:name="com.albert.fitness.pumpit.welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.albert.fitness.pumpit.fragment.FragmentNavigationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.albert.fitness.pumpit.welcome.GoalActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.albert.fitness.pumpit.workout.AddExerciseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.SearchFoodsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.albert.fitness.pumpit.nutrition.ShowFoodBeforeAddedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>