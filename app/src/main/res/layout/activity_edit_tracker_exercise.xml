<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.albert.fitness.pumpit.workout.EditTrackerExercise">

    <ImageView
        android:id="@+id/exercise_img_tracker"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/loading" />

    <include
        android:id="@+id/ly_edit_tracker"
        layout="@layout/fragment_tracker_exercise"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/exercise_img_tracker"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
