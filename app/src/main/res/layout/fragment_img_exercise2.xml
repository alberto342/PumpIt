<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.albert.fitness.pumpit.workout.ImgExerciseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iv_musical_type"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exercise_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_musical_type"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/biceps" />

    <ImageView
        android:id="@+id/iv_musical_type_2"
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/iv_musical_type"
        android:src="@mipmap/biceps" />

</RelativeLayout>