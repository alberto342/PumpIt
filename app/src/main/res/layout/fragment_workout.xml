<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.WorkoutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/hd_men_wallpapers" />
    </LinearLayout>

    <TextView
        android:id="@+id/level"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="LEVEL 1"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_see_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="135dp"
        android:text="See Programs"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/workout_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="70dp"
        android:text="Elementary"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/workout_complate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:text="0/6 Workout complate"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/empty_exersis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="You don't have exercise"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="50dp"
        android:src="@mipmap/btn_add_button_blue"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/btn_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:src="@mipmap/btn_start_workout" />

    <ImageView
        android:id="@+id/btn_find_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:src="@mipmap/find_a_workout" />

    <ImageView
        android:id="@+id/find_nutrition_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:src="@mipmap/find_a_nutrition_plan" />

</FrameLayout>