<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.WorkoutFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/hd_men_wallpapers" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="180dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/workout_complate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/empty_exersis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You don't have exercise"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="invisible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="60dp"
        android:paddingTop="50dp"
        android:src="@mipmap/btn_add_button_blue"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/btn_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:src="@mipmap/btn_start_workout" />

    <ImageView
        android:id="@+id/btn_find_workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:src="@mipmap/find_a_workout" />

    <ImageView
        android:id="@+id/find_nutrition_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:src="@mipmap/find_a_nutrition_plan" />

</FrameLayout>