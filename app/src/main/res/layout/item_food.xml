<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/common_8"
        app:cardUseCompatPadding="true"
        app:contentPadding="@dimen/common_4">

        <LinearLayout
            android:id="@+id/item_food_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/common_78"
                android:layout_height="@dimen/common_78"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/common_8"
                android:contentDescription="@null"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvFoodName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:inputType="textCapSentences"
                        android:hint="@string/food_name"
                        android:letterSpacing="0.1"
                        android:padding="@dimen/common_4"
                        android:textColor="@color/background"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/calories"
                        android:letterSpacing="0.1"
                        android:paddingStart="@dimen/common_4"
                        android:paddingLeft="@dimen/common_4"
                        android:textColor="@color/background"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvServingQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/serving_qty"
                        android:letterSpacing="0.1"
                        android:paddingStart="@dimen/common_4"
                        android:paddingLeft="@dimen/common_4"
                        android:textColor="@color/background"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvServingUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/serving_unit"
                        android:letterSpacing="0.1"
                        android:paddingStart="@dimen/common_4"
                        android:paddingLeft="@dimen/common_4"
                        android:textColor="@color/background"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>