<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="training"
            type="com.albert.fitness.pumpit.model.Training" />

        <variable
            name="exercise"
            type="com.albert.fitness.pumpit.model.Exercise" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/item_training_selected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/iv_training_thm"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="@dimen/common_8"
                    bind:img_name="@{exercise.imgName}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_exercise_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/gray" />

                    <TextView
                        android:id="@+id/tv_training_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="training name"
                        android:text="@{exercise.exerciseName}"
                        android:textColor="@color/white"
                        android:textColorHint="@color/gray"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_set_and_rep"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="set and rep"
                            android:text="@{@string/num_of_sets(training.sizeOfRept)}"
                            android:textColor="@color/gray"
                            android:textColorHint="@color/gray" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_rest_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="15dp"
                                android:layout_weight="1"
                                android:adjustViewBounds="false"
                                app:srcCompat="@mipmap/ic_selfie" />

                            <TextView
                                android:id="@+id/tv_rest_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                android:text="@{@string/rest_time(training.restBetweenSet)}"
                                android:textColor="@color/gray"
                                android:textColorHint="@color/gray" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</layout>